.navbar.navbar-default
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{data: {toggle: 'collapse', target: '#navbar-collapse'}}
        %span.sr-only Toggle navigation
        .glyphicon.glyphicon-collapse-down
      %a.navbar-brand{href: root_path} CommunityFund
    .collapse.navbar-collapse{id: 'navbar-collapse'}
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li.active
            = link_to "Logged in as #{current_user.username}", users_path(current_user.username)
          %li.active
            = link_to image_tag(avatar_url(current_user, 100), :class => "img-circle img-responsive profile-img"), users_path(current_user.username), :class => "profile-picture"
          %li
            = link_to "Start Project", new_project_path, id: 'create_project_button'
          %li.active
            = link_to "Edit Profile", edit_user_registration_path
          - if current_user.admin?
            %li{ class: 'dropdown' }
              %a{ href: '#', class: 'dropdown-toggle', role: 'button', data: { toggle: 'dropdown' } }
                Administration
                %span{ class: 'caret' }
              %ul{ class: 'dropdown-menu', role: 'menu' }
                %li= link_to "Settings", admin_settings_path
                %li= link_to "Moderation", admin_moderation_path
                %li= link_to "Analytics", admin_analytics_path
          %li
            = link_to "Logout", destroy_user_session_path, method: :delete
        - else
          %li.active
            = link_to "Sign Up", new_user_registration_path
          %li
            = link_to "Login", new_user_session_path

