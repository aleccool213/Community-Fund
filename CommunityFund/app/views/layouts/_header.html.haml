%nav.navbar-default
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{toggle: 'collapse', target: '#navbar-collapse-1'}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: root_path} CommunityFund
    .collapse.navbar-collapse{id: 'navbar-collapse-1'}
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li.active
            %strong= "Logged in as #{current_user.username}"
          - if current_user.admin?
            %li
              = link_to "Administration", admin_analytics_path
          %li
            = link_to "Edit Profile", edit_user_registration_path
          %li
            = link_to "Logout", destroy_user_session_path, method: :delete
        - else
          %li.active
            = link_to "Sign Up", new_user_registration_path
          %li
            = link_to "Login", new_user_session_path
