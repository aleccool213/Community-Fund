- event.each do |e|
  .panel.panel-default
    .panel-heading
      .panel-title
        %h3{class: "panel-title"} 
          //= e
          = link_to(e[:name] + " update!", project_path(e[:type_id]))
    .panel-body
      %h3
        = e[:description]
      %p
        //link to user public profile page
        - if e[:username]
          = link_to e[:username] + " made the donation at " + e[:time].to_s, '/users/' + e[:username]
        - else
          = e[:time].strftime("%B %d, %Y")